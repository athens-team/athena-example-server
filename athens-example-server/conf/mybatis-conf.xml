<configuration>

	<settings>
		<setting name="cacheEnabled" value="true" />
		<setting name="defaultExecutorType" value="REUSE" />
		<setting name="defaultStatementTimeout" value="10000" />
	</settings>

	<typeAliases>
		<typeAlias alias="User" type="net.rothlee.athens.olympus.data.User" />
		<typeAlias alias="Session" type="net.rothlee.athens.olympus.data.Session" />
		<typeAlias alias="Post" type="net.rothlee.athens.olympus.data.Post" />
		<typeAlias alias="Range" type="net.rothlee.athens.olympus.data.Range" />
		<typeAlias alias="TimestampTypeHandler" type="net.rothlee.athens.olympus.db.TimestampTypeHandler"/>
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.gjt.mm.mysql.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/olympus?characterEncoding=UTF8" />
				<property name="username" value="olympus" />
				<property name="password" value="olympus" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="mybatis-mapper.xml" />
	</mappers>

</configuration>